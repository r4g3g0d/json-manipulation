package com.json.data.controller;
import org.json.simple.JSONObject;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;

import com.json.data.repository.JsonProducerRepository;

@Controller
public class JsonProducerController {
	 
	@Autowired
	JsonProducerRepository jsonProducer;
	
	@RequestMapping("/get-json")
	    public ResponseEntity<JSONObject> obtainJson() {
		 return jsonProducer.retrieveJson();
}
